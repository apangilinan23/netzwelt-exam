@model TerritoryViewModel

<div class="row">
    <div class="mx-auto col-lg-8">
        <div class="row">
            <div class="col-lg-12">
                <h3>Territories</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                @{
                    foreach (var groupedPlace in Model.Territories)
                    {
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" href="#header_@groupedPlace.Parent">@groupedPlace.Parent</a>
                                    </h4>
                                </div>
                                <div id="header_@groupedPlace.Parent" class="panel-collapse collapse show">
                                    <ul class="list-group">
                                        @{
                                            foreach (var child in groupedPlace.Children)
                                            {
                                                <li class="list-group-item">
                                                    @child
                                                </li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
                <ul>
                </ul>
            </div>
        </div>
    </div>
</div>
